<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
  <h2 class="title mt-5">Edit Post</h2>
  <hr>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Album Title:</label>
      <input class="input" name="post-title" type="text" value="{{album.title}}" />
    </div>
    <div>
      <label for="post-artist">Album Artist:</label>
      <input class="input" name="post-artist" type="text" value="{{album.artist}}" />
    </div>
    <div>
      <label for="post-genre">Album Genre:</label>
      <input class="input" name="post-genre" type="text" value="{{album.genre}}" />
    </div>
    <div>
      <label for="post-content">Album Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{album.album_content}}" />
    </div>
    <div class="is-pulled-right">
      Created on {{format_date album.created_at}}
      |
      <a href="/album/{{album.id}}">{{album.comments.length}} {{format_plural "comment" album.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save Post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
  </form>
</article>

{{> comments album.comments}}

<script src="/js/edit-album.js"></script>
<script src="/js/delete-album.js"></script>
